<%- include('../partials/header') %>

<div class="container w-50">
	<h1 class="text-center">Edit post!</h1>
	<form action="/camps/<%=data._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<label>Edit Title</label>
			<input value="<%=data.title%>" name="title" type="text" class="form-control">
		</div>
		<div class="form-group">
			<label>Edit Image url</label>
			<input value="<%=data.image%>" name="image" type="url" class="form-control">
		</div>
		<div class="form-group">
			<label for="exampleFormControlTextarea1">Your Post!</label>
			<textarea name="post" class="form-control" id="exampleFormControlTextarea1" rows="3"><%=data.post%></textarea>
		</div>
		<button type="submit" class="btn btn-outline-primary">Submit</button>
	</form>
</div>

<%- include('../partials/footer') %>